#include<iostream>
#include<cmath>
using namespace std;

int main() {
    double l, r, a;

    cout << "Ingrese la longitud de un lado del decagono: ";
    cin >> l;
    cout << "Ingrese el radio del decagono: ";
    cin >> r;

    a = sqrt(pow(r, 2) - pow(l / 2, 2));

    cout << "El apotema del decagono regular es: " << a << endl;

    return 0;
}
