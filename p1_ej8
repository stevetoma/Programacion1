#include <cmath>
#include <iostream>
using namespace std;


int main()
{
    int a, p, n, r, t;
    
    cout << "ingrese la capital: " << endl;
    
    cin >> p;
    
    cout << "ingrese la tasa de interes: " << endl;
    
    cin >> r;
    
    cout << "ingrese el tiempo:" << endl;
    
    cin >> t;
    
    cout << "ingrese la frecuencia de capitalizacion:" << endl;
    
    cin >> n;
    
    a = p * pow((1 + r / n), (n * t));
    
    cout << "la tasa de interes simple es: " << a;
    
    return 0;
}
