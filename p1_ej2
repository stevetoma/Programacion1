#include <iostream>
using namespace std;

int main()
{
    int a, b, c, d, p;
    cout << "Ingrese lado1: " << endl;
    cin >> a;
    cout << "Ingrese lado 2: " << endl;
    cin >> b;
    cout << "Ingrese lado 3 : " << endl;
    cin >> c;
    cout << "Ingrese lado 4 : " << endl;
    cin >> d;
    
    p = a + b +c +d;
    
    cout << "El perimetro de un trapezoide es: " << p;
}
