#include <iostream>
using namespace std;

int main()
{
    int x;
    
    cout << "ingrese el numero a ser evaluado" << endl;
    
    cin >> x;
    
    if (x>0)
    {
        cout << x << " Es positivo" << endl;
    }    
    if (x<0)
    {
        cout << x << " Es negativo" << endl;
    }
    if (x==0)
    {
        cout << x << " Es neutro" << endl;
    }
    return 0;
}
