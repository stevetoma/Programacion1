#include <iostream>
using namespace std;

int main()
{
    int i, c, r, t;
    
    cout << "ingrese la capital inicial:" << endl;
    
    cin >> c;
    
    cout << "ingrese la tasa de interes: " << endl;
    
    cin >> r;
    
    cout << "ingrese el tiempo:" << endl;
    
    cin >> t;
    
    i = c*r*t;
    
    cout << "la tasa de interes simple es: " << i;
    
    return 0;
}
