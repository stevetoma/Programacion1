#include <iostream>
using namespace std;

int main() 
{
    int h, m ,s , ch ,cm, cs, ct;
    cout << "Ingrese las horas: " << endl;
    cin >> h;
    cout << "Ingrese los minutos: " << endl;
    cin >> m;
    cout << "Ingrese los segundos: " << endl;
    cin >> s;
    ch=h*60;
    cm=m+ch; 
    cs=cm*60;
    ct=cs+s;
    cout << "los segundos totakes son: " << ct;
    return 0;
}
