#include <iostream>
using namespace std;

int main()
{
    int a, p, h, b, a1 ;
    cout << "Ingrese base: " << endl;
    cin >> a;
    cout << "Ingrese altura: " << endl;
    cin >> h;
    cout << "Ingrese lado 3 : " << endl;
    cin >> b;
    
    
    p = a + b + a;
    a1= (a*h)/2;
    
    cout << "El perimetro de un triangulo es: " << p << endl;
    cout << "El area de un triangulo es: " << a1;
    
}
